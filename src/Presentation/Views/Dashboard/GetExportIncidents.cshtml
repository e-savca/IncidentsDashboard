@using Application.Incident.Queries.GetExportIncidentToFile
@model ExportIncidentToFileFilterModel

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Export Incident</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("ExportIncidentsToFile", "Dashboard", FormMethod.Post, new { id = "exportIncidentForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(model => model.StartDate, "Start Date")
                            @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", @type = "datetime-local" })
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.EndDate, "End Date")
                            @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control", @type = "datetime-local" })
                            @Html.ValidationMessageFor(model => model.EndDate)
                        </div>

                        <div class="form-group d-flex justify-content-end mt-5 mb-3">
                            <input type="submit" value="Export" class="btn btn-primary me-auto">
                            <a href="#Dashboard" class="btn btn-secondary">Back to list</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script type="module">
   import { GetExportAsync } from '@Url.Content("~/IDCore.JS/Views/Admin/GetExportAsync")';
   GetExportAsync();
</script>