@model IEnumerable<Application.Models.UserDto>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table id="usersTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Is Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.IsActive</td>
            </tr>
        }
    </tbody>
</table>

    <script>
        $(document).ready(function () {
            $('#usersTable').dataTable();
        });
    </script>


