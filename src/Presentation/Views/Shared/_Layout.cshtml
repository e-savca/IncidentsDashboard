<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Incidents Dashboard</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/sammyjs")
    @Scripts.Render("~/bundles/layout-routing")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Incidents Dashboard", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li><a href="#/Home/Index">Home</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        @*<li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>*@
                        <li><a href="#/Home/About">About</a></li>
                    }
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>*@
                    <li><a href="#/Home/Contact">Contact</a></li>
                </ul>
            </div>
            <div class="d-flex">
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="@Url.Action("SignOut", "Account", new { area = "" })" type="button" class="btn btn-danger nav-link">Sign Out</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="@Url.Action("SignIn", "Account", new { area = "" })" type="button" class="btn btn-primary nav-link">Sign In</a>
                        </li>
                    }
                </ul>
            </div>
    </nav>

    <div class="container body-content">
        <div class="MainContent">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Incidents Dashboard</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
